<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>

  <body>
    <%- include("./partials/nav.ejs") %>
    <h1>Edit Comment</h1>

    <form action="/edit-comment/<%= comment.id %>?_method=PATCH" method="POST">
      <label>Name:</label><br />
      <input type="text" name="name" value="<%= comment.name %>" required /><br />

      <label>Email:</label><br />
      <input type="email" name="email" value="<%= comment.email %>" required /><br />

      <label>Comment Body:</label><br />
      <textarea name="body" required><%= comment.body %></textarea><br />

      <button type="submit">Update Comment</button>
    </form>
  </body>
</html>
